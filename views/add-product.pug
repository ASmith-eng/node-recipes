doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Recipes-Add Recipe
        link(rel="stylesheet", href="/styles/main.css")
        link(rel="stylesheet", href="/styles/form.css")
    body 
        header 
            nav 
                div.logo
                    img(src="https://img.icons8.com/material-outlined/96/000000/rice-bowl.png")
                ul.navlinks
                    li
                        a(href="/") Home 
                    li 
                        a(href="admin/add-recipe") Add Recipe
        main
            section.recipe-intro 
                h1 A new dish! Now, what is it?
                form.name-description(action="/admin/add-recipe", method="POST")
                    .step-name
                        label(for="name") Dish Name
                        input#dish-input(type="text", name="name", placeholder="Give me a name!!")
                    .step-description 
                        label(for="description") Description
                        textarea#description-input(name="description", placeholder="Start typing to add a description")
                    p Click next to save and start adding ingredients 
                    button(type="submit") Next
