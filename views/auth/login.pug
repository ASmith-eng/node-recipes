extends ../layouts/main-layout.pug

block title
    title Recipes-Login

block styles 
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="stylesheet", href="/styles/signin.css")

block content
    section.form-container
        .message
            p Admin users can sign in here to add and update recipes!
            p Please do not enter any sensitive info here
        .signin-card
            .signin-content
                form.signin(action="/login", method="POST")
                    input#username(type="email", name="username", placeholder="Email")
                    input#password(type="password", name="password", placeholder="Password")
                    button.link-button(type="submit") Login
            .signin-background
                span.background-shape