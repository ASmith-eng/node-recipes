extends layouts/main-layout.pug

block title
    title Recipes-Directory 

block styles 
    link(rel="stylesheet", href="/styles/main.css")

block content 
    main 
        section.list-container 
            a(href='/recipes?dish='+recipe.name)
                article.recipe-card
                    .content
                        h2 #{recipe.name} 
                        p #{recipe.description}
                    img.dish-img(src="/images/image.webp")