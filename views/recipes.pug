extends layouts/main-layout.pug

block title
    title Recipes-Home 

block styles 
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="stylesheet", href="/styles/home.css")

block additional-nav-links 
    li 
        a(href="admin/add-recipe") Add Recipe 

block content 
    main 
            section.about
                div.large-card
                    h1 Recipes 
                    p This is a paragraph with an explanation of the recipes site! Scroll down to browse our full list of exciting menu possibilities. Who knows, maybe these will be organised by category in the future?
            if dishes.length>0
                section.recipe-directory 
                    article.recipe-card
                        .content
                            h2 Pepperoni Pizza 
                            p A description of a pepperoni pizza!
                        img.dish-img(src="/images/image.webp")
                    article.recipe-card
                        .content 
                            h2 Eton Mess 
                            p We're not talking about Boris Johnson
                        img.dish-img(src="/images/image.webp")
                    each recipe in dishes
                        article.recipe-card
                            .content
                                h2 #{recipe.name} 
                                p #{recipe.description}
                            img.dish-img(src="/images/image.webp")
            else 
                section.no-recipes
                    .large-card 
                        h1 No Recipes Found!